@using MyFlightbook.Printing
@{
    PrintLayout pl = ViewBag.pl;
    MyFlightbook.Profile pf = pl.CurrentUser;
}
<table style="width:100%;">
    <tr>
        <td class="printHeaderLeft">
            @if (pl.Options.Sections.IncludeHeadshot && pf.HasHeadShot)
            {
                <div class="dib"><img class="headerHeadSht" src="@pf.HeadShotHRefWithKey" /></div>   
            }
            <div class="dib printHeaderAddress">@(pl.Options.Sections.IncludeAddress ? pf.Address : string.Empty)</div>
        </td>
        <td class="printHeaderCenter" colspan="7">
            <img class="printHeaderLogo" src="@Branding.CurrentBrand.LogoHRef.ToAbsoluteURL(Request)" />
        </td>
        <td class="printHeaderRight">
            <div>@pf.UserFullName</div>
            <div>@pf.LicenseDisplay</div>
        </td>
    </tr>
</table>
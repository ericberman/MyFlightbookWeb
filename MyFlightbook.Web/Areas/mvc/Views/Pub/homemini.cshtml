@using System.Globalization
@{
    Profile pf = User.Identity.IsAuthenticated ? MyFlightbook.Profile.GetUser(User.Identity.Name) : null;
    ViewBag.Title = User.Identity.IsAuthenticated ?
        String.Format(CultureInfo.CurrentCulture, Resources.LocalizedText.DefaultPageWelcomeBack, pf.PreferredGreeting) :
        String.Format(CultureInfo.CurrentCulture, Resources.Profile.WelcomeTitle, Branding.CurrentBrand.AppName);
    Layout = "~/Areas/mvc/Views/Shared/_Layout.cshtml";
    ViewBag.defaultTab = tabID.tabHome;
}
<div>@Resources.LocalizedText.HomePageMiniPrompt</div>
<ul>

    <li><a href="@("~/mvc/flights/minitotals".ToAbsolute())">@Resources.LocalizedText.HomePageMiniActionTotals</a></li>
    <li><a href="@("~/mvc/Aircraft".ToAbsolute())">@Resources.LocalizedText.HomePageMiniActionAircraft</a></li>
    <li><a href="@("~/mvc/flights/minirecents".ToAbsolute())">@Resources.LocalizedText.HomePageMiniActionRecent</a></li>
